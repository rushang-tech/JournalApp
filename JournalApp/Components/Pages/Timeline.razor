@page "/timeline"
@using JournalApp.Models
@using JournalApp.Services
@inject JournalService DbService
@inject NavigationManager Nav

<div class="timeline-container">
    
    <!-- 1. HEADER SECTION -->
    <div class="timeline-header fade-in-up">
        <h2 class="page-title">Timeline</h2>
        <p class="page-subtitle">Your story, captured one day at a time.</p>
    </div>

    <!-- 2. FLOATING TOOLBAR (Centered & Polished) -->
    <div class="toolbar-wrapper fade-in-up" style="animation-delay: 0.1s;">
        <div class="glass-toolbar">
            
            <!-- Search -->
            <div class="search-box">
                <i class="bi bi-search search-icon"></i>
                <input type="text" 
                       class="search-input" 
                       placeholder="Search memories..." 
                       value="@searchText"
                       @oninput="HandleSearchInput" />
            </div>

            <div class="divider"></div>

            <!-- Mood Filter -->
            <div class="mood-group">
                <button class="mood-chip @(selectedMood == null ? "active" : "")" @onclick="() => SetMood(null)">All</button>
                <button class="mood-chip icon-only @(selectedMood == "Happy" ? "active" : "")" @onclick='() => SetMood("Happy")' title="Happy">üòä</button>
                <button class="mood-chip icon-only @(selectedMood == "Neutral" ? "active" : "")" @onclick='() => SetMood("Neutral")' title="Neutral">üòê</button>
                <button class="mood-chip icon-only @(selectedMood == "Sad" ? "active" : "")" @onclick='() => SetMood("Sad")' title="Sad">üòî</button>
            </div>

            <div class="divider d-none d-md-block"></div>

            <!-- Date Filter -->
            <div class="date-group d-none d-md-flex">
                <input type="date" class="date-picker" value="@(startDate?.ToString("yyyy-MM-dd"))" @onchange="HandleStartDateChange" />
                <span class="arrow">‚Üí</span>
                <input type="date" class="date-picker" value="@(endDate?.ToString("yyyy-MM-dd"))" @onchange="HandleEndDateChange" />
            </div>

            <!-- Reset Button -->
            @if (!string.IsNullOrEmpty(searchText) || !string.IsNullOrEmpty(selectedMood) || startDate.HasValue || endDate.HasValue)
            {
                <button class="reset-btn" @onclick="ResetFilters">
                    <i class="bi bi-x-lg"></i>
                </button>
            }
        </div>
    </div>

    <!-- 3. TIMELINE FEED -->
    <div class="feed-list mt-5">
        @if (isLoading)
        {
            <div class="state-message">
                <div class="spinner-border text-secondary mb-2" role="status"></div>
                <p>Loading entries...</p>
            </div>
        }
        else if (filteredEntries.Count == 0)
        {
             <div class="state-message">
                 <i class="bi bi-journal-x fs-1 mb-3 opacity-50"></i>
                 <p>No entries found matching filters.</p>
                 <button class="text-btn" @onclick="ResetFilters">Clear filters</button>
             </div>
        }
        else
        {
            @foreach (var entry in filteredEntries)
            {
                <div class="memory-card fade-in-up" @onclick='() => Nav.NavigateTo($"journal?date={entry.EntryDate:yyyy-MM-dd}")'>
                    
                    <!-- Left: Date -->
                    <div class="date-col">
                        <span class="day">@entry.EntryDate.Day</span>
                        <span class="month">@entry.EntryDate.ToString("MMM")</span>
                        <span class="year">@entry.EntryDate.Year</span>
                    </div>

                    <!-- Middle: Content -->
                    <div class="content-col">
                        <div class="top-row">
                            <h4 class="title">@(string.IsNullOrEmpty(entry.Title) ? "Untitled Entry" : entry.Title)</h4>
                            <div class="mood-display" title="@entry.PrimaryMood">
                                @(entry.PrimaryMood == "Happy" ? "üòä" : entry.PrimaryMood == "Sad" ? "üòî" : "üòê")
                            </div>
                        </div>
                        
                        <p class="preview-text">@(StripHtml(entry.Content ?? ""))</p>
                        
                        @if (!string.IsNullOrEmpty(entry.Tags))
                        {
                            <div class="tags-list">
                                @foreach(var tag in entry.Tags.Split(','))
                                {
                                    <span class="tag">#@tag.Trim()</span>
                                }
                            </div>
                        }
                    </div>

                    <!-- Right: Actions (Delete) -->
                    <button class="delete-action" @onclick:stopPropagation="true" @onclick="() => DeleteEntry(entry)">
                        <i class="bi bi-trash3"></i>
                    </button>
                </div>
            }
        }
    </div>
</div>

<style>
    /* --- PAGE LAYOUT --- */
    .timeline-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 60px 20px;
    }

    .timeline-header { text-align: center; margin-bottom: 40px; }
    .page-title {
        font-size: 3rem; font-weight: 900; color: var(--text-main);
        letter-spacing: -1.5px; margin-bottom: 5px;
    }
    .page-subtitle { color: var(--text-muted); font-size: 1.1rem; }

    /* --- TOOLBAR STYLES --- */
    .toolbar-wrapper {
        display: flex; justify-content: center;
        position: sticky; top: 20px; z-index: 100;
    }

    .glass-toolbar {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 100px;
        padding: 8px 10px;
        display: flex; align-items: center;
        box-shadow: var(--shadow-md);
        width: 100%; max-width: 850px;
        transition: transform 0.2s;
    }
    
    /* Search */
    .search-box { display: flex; align-items: center; flex-grow: 1; padding-left: 15px; }
    .search-icon { color: var(--text-muted); font-size: 1.1rem; margin-right: 10px; }
    .search-input {
        border: none; background: transparent;
        font-size: 1rem; color: var(--text-main); width: 100%; font-weight: 500;
    }
    .search-input::placeholder { color: var(--text-muted); opacity: 0.7; }

    .divider { width: 1px; height: 24px; background-color: var(--border-color); margin: 0 15px; }

    /* Mood Chips */
    .mood-group { display: flex; gap: 5px; }
    .mood-chip {
        background: transparent; border: 1px solid transparent;
        color: var(--text-muted); padding: 6px 14px;
        border-radius: 20px; font-size: 0.85rem; font-weight: 600;
        cursor: pointer; transition: all 0.2s;
    }
    .mood-chip.icon-only { padding: 6px 10px; font-size: 1.1rem; }
    .mood-chip:hover { background-color: var(--hover-bg); color: var(--text-main); }
    .mood-chip.active { background-color: var(--accent-color); color: var(--accent-text); box-shadow: var(--shadow-sm); }

    /* Date Picker */
    .date-group { display: flex; align-items: center; gap: 8px; }
    .date-picker {
        background-color: var(--input-bg); border: none; color: var(--text-main);
        padding: 6px 10px; border-radius: 8px; font-size: 0.8rem;
        font-family: inherit; cursor: pointer;
        color-scheme: light dark; /* Dark mode calendar fix */
    }
    .arrow { color: var(--text-muted); font-size: 0.8rem; }

    /* Reset */
    .reset-btn {
        width: 32px; height: 32px; border-radius: 50%;
        background-color: #FFEDED; color: #FF4444; border: none;
        display: flex; align-items: center; justify-content: center;
        margin-left: 10px; cursor: pointer; transition: transform 0.2s;
    }
    .reset-btn:hover { transform: scale(1.1); background-color: #FFDCDC; }
    .dark-theme .reset-btn { background-color: #3A1E1E; }

    /* --- CARD STYLING --- */
    .feed-list { display: flex; flex-direction: column; gap: 20px; }

    .memory-card {
        background-color: var(--card-bg);
        border: 1px solid var(--border-color);
        border-radius: 24px; padding: 25px 30px;
        display: flex; align-items: flex-start; gap: 30px;
        cursor: pointer; transition: all 0.2s ease; position: relative;
    }
    .memory-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-md);
        border-color: var(--text-muted);
    }

    /* Date Column */
    .date-col {
        display: flex; flex-direction: column; align-items: center;
        min-width: 60px; padding-right: 25px;
        border-right: 2px solid var(--border-color);
    }
    .day { font-size: 1.8rem; font-weight: 900; line-height: 1; color: var(--text-main); }
    .month { font-size: 0.8rem; font-weight: 700; color: var(--text-muted); text-transform: uppercase; }
    .year { font-size: 0.7rem; color: var(--text-muted); margin-top: 4px; opacity: 0.6; }

    /* Content Column */
    .content-col { flex: 1; overflow: hidden; }
    .top-row { display: flex; align-items: center; gap: 10px; margin-bottom: 5px; }
    .title {
        font-size: 1.2rem; font-weight: 800; color: var(--text-main);
        white-space: nowrap; overflow: hidden; text-overflow: ellipsis; margin: 0;
    }
    .mood-display { font-size: 1.2rem; }

    .preview-text {
        font-size: 1rem; color: var(--text-muted); line-height: 1.6; margin-bottom: 12px;
        display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;
    }

    .tags-list { display: flex; flex-wrap: wrap; gap: 8px; }
    .tag {
        font-size: 0.75rem; font-weight: 600;
        background-color: var(--input-bg); color: var(--text-muted);
        padding: 4px 10px; border-radius: 6px;
    }

    /* Delete Action */
    .delete-action {
        background: transparent; border: none; color: var(--text-muted);
        opacity: 0.3; font-size: 1.2rem; transition: all 0.2s;
    }
    .memory-card:hover .delete-action { opacity: 1; }
    .delete-action:hover { color: #FF4444; transform: scale(1.1); }

    /* Empty State */
    .state-message { text-align: center; color: var(--text-muted); padding: 40px; }
    .text-btn { background: none; border: none; color: var(--accent-color); font-weight: 700; text-decoration: underline; cursor: pointer; }

    /* Responsive */
    @@media (max-width: 768px) {
        .glass-toolbar { flex-wrap: wrap; height: auto; border-radius: 24px; padding: 15px; }
        .divider, .date-group { display: none; }
        .search-box { width: 100%; border-bottom: 1px solid var(--border-color); padding-bottom: 10px; margin-bottom: 10px; padding-left: 0; }
        .memory-card { flex-direction: column; gap: 15px; padding: 20px; }
        .date-col { flex-direction: row; border-right: none; border-bottom: 1px solid var(--border-color); padding: 0 0 10px 0; width: 100%; justify-content: flex-start; gap: 10px; align-items: baseline; }
        .delete-action { position: absolute; top: 20px; right: 20px; opacity: 1; }
    }
</style>

@code {
    [Inject] IJSRuntime JS { get; set; }

    private List<JournalEntry> allEntries = new();
    private List<JournalEntry> filteredEntries = new();
    private bool isLoading = true;

    // Filters
    private string searchText = "";
    private string? selectedMood = null;
    private DateTime? startDate = null;
    private DateTime? endDate = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        allEntries = await DbService.GetAllEntriesAsync();
        ApplyFilters();
        isLoading = false;
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchText = e.Value?.ToString() ?? "";
        ApplyFilters();
    }

    private void SetMood(string? mood)
    {
        selectedMood = mood;
        ApplyFilters();
    }

    private void HandleStartDateChange(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out DateTime date)) startDate = date; else startDate = null;
        ApplyFilters();
    }

    private void HandleEndDateChange(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out DateTime date)) endDate = date; else endDate = null;
        ApplyFilters();
    }

    private void ResetFilters()
    {
        searchText = "";
        selectedMood = null;
        startDate = null;
        endDate = null;
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        IEnumerable<JournalEntry> query = allEntries;

        if (!string.IsNullOrWhiteSpace(searchText)) 
        {
            query = query.Where(e => 
                (e.Title?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false) || 
                (e.Content?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (e.Tags?.Contains(searchText, StringComparison.OrdinalIgnoreCase) ?? false)
            );
        }

        if (!string.IsNullOrEmpty(selectedMood))
            query = query.Where(e => e.PrimaryMood == selectedMood);

        if (startDate.HasValue)
            query = query.Where(e => e.EntryDate.Date >= startDate.Value.Date);
            
        if (endDate.HasValue)
            query = query.Where(e => e.EntryDate.Date <= endDate.Value.Date);

        filteredEntries = query.ToList();
    }

    private async Task DeleteEntry(JournalEntry entry)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this memory?");
        if (confirmed)
        {
            await DbService.DeleteEntryAsync(entry);
            await LoadData();
        }
    }

    private string StripHtml(string input)
    {
        if (string.IsNullOrEmpty(input)) return "";
        return System.Text.RegularExpressions.Regex.Replace(input, "<.*?>", String.Empty);
    }
}