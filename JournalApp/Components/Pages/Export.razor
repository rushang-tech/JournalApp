@page "/export"
@using JournalApp.Services
@using Microsoft.Maui.ApplicationModel
@using Microsoft.Maui.Storage
@inject JournalService DbService
@inject IJSRuntime JS

<div class="container-fluid p-4">
    <h2 class="fw-bold mb-4">Export Journals</h2>
    
    <div class="stoic-card p-4 border rounded shadow-sm bg-white" style="max-width: 600px;">
        <p class="text-muted mb-4">Select date range to export PDF.</p>
        
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label small fw-bold">START DATE</label>
                <input type="date" class="form-control" @bind="startDate" />
            </div>
            <div class="col-md-6">
                <label class="form-label small fw-bold">END DATE</label>
                <input type="date" class="form-control" @bind="endDate" />
            </div>
        </div>

        <button class="btn btn-dark w-100 mt-4 py-3 fw-bold rounded-pill" @onclick="GenerateExport">
            @if (isGenerating) { <span>Processing...</span> }
            else { <span><i class="bi bi-file-earmark-pdf me-2"></i> EXPORT PDF</span> }
        </button>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Today.AddDays(-30);
    private DateTime endDate = DateTime.Today;
    private bool isGenerating = false;

    private async Task GenerateExport()
    {
        isGenerating = true;
        // Small delay to let UI show "Processing..."
        await Task.Delay(50); 

        try 
        {
            string filePath = await DbService.GeneratePdfExportAsync(startDate, endDate);
            
            if (string.IsNullOrEmpty(filePath))
            {
                await JS.InvokeVoidAsync("alert", "No entries found in this date range.");
            }
            else
            {
                // NOTIFICATION: Tell the user to look for the share/save dialog
                await JS.InvokeVoidAsync("alert", "PDF Generated Successfully!\n\nA sharing menu will open. Please select 'Save to Files' or 'Save As' to pick where you want to store the PDF.");

                // Trigger native Share/Save dialog
                await Share.Default.RequestAsync(new ShareFileRequest
                {
                    Title = "Journify PDF Export",
                    File = new ShareFile(filePath)
                });
            }
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "Error: " + ex.Message);
        }
        finally { isGenerating = false; }
    }
}