    /* --- STATS GRID --- */
    .widgets-grid {
        display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px;
    }
    .stat-card {
        background-color: var(--bg-secondary); /* Uses Dark Grey in Dark Mode */
        border: 1px solid var(--border-color);
        border-radius: 20px; padding: 20px 24px;
        display: flex; align-items: center; gap: 20px;
        transition: transform 0.2s;
        box-shadow: 0 4px 15px var(--shadow-color);
    }
    .stat-card:hover { transform: translateY(-3px); }

    .icon-box {
        width: 52px; height: 52px; border-radius: 16px;
        display: flex; align-items: center; justify-content: center; font-size: 1.4rem;
        flex-shrink: 0;
    }
    .purple-bg { background: rgba(138, 111, 232, 0.1); color: #8A6FE8; }
    .orange-bg { background: rgba(234, 88, 12, 0.1); color: #EA580C; }
    .blue-bg { background: rgba(59, 130, 246, 0.1); color: #3B82F6; }

    :global(.dark-theme) .purple-bg { background: rgba(138, 111, 232, 0.15); }
    :global(.dark-theme) .orange-bg { background: rgba(234, 88, 12, 0.15); }
    :global(.dark-theme) .blue-bg { background: rgba(59, 130, 246, 0.15); }

    .stat-info { display: flex; flex-direction: column; }
    .stat-value { font-size: 1.8rem; font-weight: 800; margin: 0; line-height: 1; color: var(--text-primary); }
