@page "/"
@using JournalApp.Services
@using JournalApp.Models
@inject JournalService DbService
@inject NavigationManager Nav

<div class="dashboard-container fade-in">

    <!-- 1. GREETING HEADER -->
    <header class="dashboard-header">
        <div class="header-text">
            <div class="date-badge">
                <i class="bi bi-calendar4-week"></i> @DateTime.Now.ToString("dddd, MMMM dd")
            </div>
            <h1 class="greeting-title">
                Good @GetTimeOfDay(), <span class="highlight-name">@Environment.UserName</span>
            </h1>
        </div>

        <button class="primary-btn" @onclick='() => Nav.NavigateTo("journal")'>
            <i class="bi bi-plus-lg"></i> <span>New Entry</span>
        </button>
    </header>

    <!-- 2. HERO SECTION -->
    <section class="hero-card" @onclick='() => Nav.NavigateTo("journal")'>
        <div class="hero-content">
            <span class="hero-label"><i class="bi bi-lightbulb-fill"></i> DAILY REFLECTION</span>
            <h2 class="hero-text">"@dailyPrompt"</h2>
            <div class="hero-footer">
                <span>Tap to write your thoughts...</span>
                <i class="bi bi-arrow-right-circle-fill arrow-icon"></i>
            </div>
        </div>
        <div class="hero-blob"></div>
    </section>

    <!-- 3. STATS GRID -->
    <div class="widgets-grid">
        <div class="stat-card">
            <div class="icon-box purple-bg"><i class="bi bi-journal-text"></i></div>
            <div class="stat-info">
                <h3 class="stat-value">@entryCount</h3>
                <span class="stat-label">Total Entries</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="icon-box orange-bg"><i class="bi bi-fire"></i></div>
            <div class="stat-info">
                <h3 class="stat-value">@currentStreak</h3>
                <span class="stat-label">Day Streak</span>
            </div>
        </div>

        <div class="stat-card">
            <div class="icon-box blue-bg"><i class="bi bi-bar-chart-steps"></i></div>
            <div class="stat-info">
                <h3 class="stat-value">@totalWords</h3>
                <span class="stat-label">Words Written</span>
            </div>
        </div>
    </div>

    <!-- 4. CONTENT SPLIT -->
    <div class="content-split">

        <!-- LEFT: Recent Memories (UPDATED TO 5) -->
        <div class="section-column">
            <div class="section-header">
                <h3>Recent Memories</h3>
                <button class="link-btn" @onclick='() => Nav.NavigateTo("timeline")'>View Timeline</button>
            </div>

            <div class="entries-list">
                @if(recentEntries.Any())
                {
                <!-- FIX: Changed from Take(3) to Take(5) as requested -->
                @foreach(var entry in recentEntries.Take(5))
                {
                <div class="entry-item" @onclick='() => Nav.NavigateTo($"journal?date={entry.EntryDate:yyyy-MM-dd}")'>
                    <div class="entry-date">
                        <span class="day">@entry.EntryDate.Day</span>
                        <span class="month">@entry.EntryDate.ToString("MMM")</span>
                    </div>
                    <div class="entry-content">
                        <div class="entry-title">@(string.IsNullOrEmpty(entry.Title) ? "Untitled Entry" : entry.Title)</div>
                        <div class="entry-preview">@(StripHtml(entry.Content ?? "No content..."))</div>
                    </div>
                    <div class="entry-mood">@GetMoodEmoji(entry.PrimaryMood)</div>
                </div>
                }
                }
                else
                {
                <div class="empty-state">
                    <i class="bi bi-journal-plus"></i>
                    <p>No entries yet. Start your journey today.</p>
                </div>
                }
            </div>
        </div>

        <!-- RIGHT: Mood Visualizer -->
        <div class="section-column">
            <div class="section-header">
                <h3>Mood Flow</h3>
                <span class="badge-subtle">Last 7 Days</span>
            </div>

            <div class="mood-card">
                <div class="mood-grid">
                    @if(recentEntries.Any())
                    {
                    @foreach(var entry in recentEntries.Take(7))
                    {
                    <div class="mood-node">
                        <div class="mood-circle @GetMoodClass(entry.PrimaryMood)"></div>
                        <span class="mood-label">@entry.EntryDate.ToString("dd")</span>
                    </div>
                    }
                    }
                    else
                    {
                    <div class="text-muted small text-center w-100 py-3">Write more to see your flow.</div>
                    }
                </div>
            </div>

            <div class="daily-tip-card mt-3">
                <div class="tip-icon"><i class="bi bi-stars"></i></div>
                <div class="tip-content">
                    <span class="tip-title">Daily Tip</span>
                    <p class="tip-text">Consistency beats intensity. Write a little every day.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
private int currentStreak = 0;
private int totalWords = 0;
private int entryCount = 0;
private List<JournalEntry> recentEntries = new List<JournalEntry>();
private string dailyPrompt = "What's on your mind?";

protected override async Task OnInitializedAsync()
{
currentStreak = await DbService.GetCurrentStreakAsync();
totalWords = await DbService.GetTotalWordsAsync();
var all = await DbService.GetAllEntriesAsync();
entryCount = all.Count;
recentEntries = all;

var todayEntry = await DbService.GetEntryByDateAsync(DateTime.Now);
if (todayEntry != null && !string.IsNullOrEmpty(todayEntry.Content))
{
dailyPrompt = "Keep the momentum going! Want to add more?";
}
else
{
dailyPrompt = GetRandomPrompt();
}
}

private string GetTimeOfDay() => DateTime.Now.Hour < 12 ? "Morning" : DateTime.Now.Hour < 18 ? "Afternoon" : "Evening";

private string GetRandomPrompt()
{
var prompts = new[] { "What made you smile today?", "What did you learn?", "How are you feeling?", "What are you grateful for?" };
return prompts[new Random().Next(prompts.Length)];
}

private string StripHtml(string input)
{
if (string.IsNullOrEmpty(input)) return "";
var noHtml = System.Text.RegularExpressions.Regex.Replace(input, "<.*?>", String.Empty);
return noHtml.Length > 60 ? noHtml.Substring(0, 60) + "..." : noHtml;
}

