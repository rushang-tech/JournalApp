        text-align: center; padding: 40px; border: 2px dashed #E5E5E5; border-radius: 24px; color: #AAA; font-size: 1.1rem;
    }

    /* RESPONSIVE */
    @@media (max-width: 1200px) {
        .content-split { grid-template-columns: 1fr; gap: 30px; }
        .visualizer-column { flex-direction: row; gap: 20px; }
        .mood-widget-card, .tip-card { flex: 1; }
    }

    @@media (max-width: 900px) {
        .widgets-grid { grid-template-columns: 1fr; }
        .dashboard-header { flex-direction: column; align-items: flex-start; gap: 20px; }
        .visualizer-column { flex-direction: column; }
    }
