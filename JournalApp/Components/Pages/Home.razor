        border: 1px solid rgba(138, 111, 232, 0.2);
        box-shadow: none;
    }

    .tip-icon { font-size: 1.2rem; color: #512BD4; margin-top: 2px; }
    :global(.dark-theme) .tip-icon { color: #A08BE8; }

    .tip-title { display: block; font-weight: 700; font-size: 0.9rem; color: #512BD4; margin-bottom: 4px; }
    :global(.dark-theme) .tip-title { color: #A08BE8; }

    .tip-text { font-size: 0.85rem; margin: 0; color: #512BD4; opacity: 0.9; line-height: 1.4; }
    :global(.dark-theme) .tip-text { color: #E0D4FC; }

    .empty-state {
        text-align: center; padding: 30px;
        border: 2px dashed var(--border-color);
        border-radius: 16px; color: var(--text-muted);
    }

    /* Animation */
    .fade-in { animation: fadeInUp 0.6s ease-out forwards; opacity: 0; transform: translateY(10px); }
    @@keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }

    @@media (max-width: 1000px) {
        .content-split { grid-template-columns: 1fr; }
        .greeting-title { font-size: 2.2rem; }
    }
