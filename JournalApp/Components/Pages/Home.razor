@page "/"
@using JournalApp.Services
@using JournalApp.Models
@inject JournalService DbService
@inject NavigationManager Nav

<div class="dashboard-container fade-in">

    <!-- 1. GREETING HEADER -->
    <header class="dashboard-header">
        <div class="header-left">
            <div class="date-badge">
                <i class="bi bi-calendar4-week"></i> @DateTime.Now.ToString("dddd, MMMM dd")
            </div>
            <h1 class="greeting-title">
                Good @GetTimeOfDay(), <span class="highlight-name">@Environment.UserName</span>
            </h1>
        </div>

        <!-- Quick Action -->
        <button class="primary-btn" @onclick='() => Nav.NavigateTo("journal")'>
            <i class="bi bi-plus-lg"></i> New Entry
        </button>
    </header>

    <!-- 2. HERO SECTION (Daily Prompt) -->
    <section class="hero-card" @onclick='() => Nav.NavigateTo("journal")'>
        <div class="hero-content">
            <span class="hero-label"><i class="bi bi-lightbulb-fill"></i> DAILY REFLECTION</span>
            <h2 class="hero-text">"@dailyPrompt"</h2>
            <div class="hero-footer">
                <span>Tap to write your thoughts...</span>
                <i class="bi bi-arrow-right-circle-fill arrow-icon"></i>
            </div>
        </div>
        <!-- Decorative Background Element -->
        <div class="hero-blob"></div>
    </section>

    <!-- 3. STATS GRID (Now spans full width) -->
    <div class="widgets-grid">
        <!-- Stat 1: Entries -->
        <div class="widget-card">
            <div class="icon-circle purple-bg"><i class="bi bi-journal-text"></i></div>
            <div class="widget-text">
                <h3 class="widget-value">@entryCount</h3>
                <span class="widget-label">Total Entries</span>
            </div>
        </div>

        <!-- Stat 2: Streak -->
        <div class="widget-card">
            <div class="icon-circle orange-bg"><i class="bi bi-fire"></i></div>
            <div class="widget-text">
                <h3 class="widget-value">@currentStreak</h3>
                <span class="widget-label">Day Streak</span>
            </div>
        </div>

        <!-- Stat 3: Words -->
        <div class="widget-card">
            <div class="icon-circle blue-bg"><i class="bi bi-bar-chart-steps"></i></div>
            <div class="widget-text">
                <h3 class="widget-value">@totalWords</h3>
                <span class="widget-label">Words Written</span>
            </div>
        </div>
    </div>

    <!-- 4. CONTENT SPLIT -->
    <div class="content-split">

        <!-- LEFT: Recent Entries (Takes more space) -->
        <div class="recent-column">
            <div class="section-header">
                <h3>Recent Memories</h3>
                <a href="timeline" class="view-link">View Timeline</a>
            </div>

            <div class="entries-list">
                @if(recentEntries.Any())
                {
                @foreach(var entry in recentEntries.Take(3))
                {
                <div class="entry-card" @onclick='() => Nav.NavigateTo($"journal?date={entry.EntryDate:yyyy-MM-dd}")'>
                    <div class="entry-date-box">
                        <span class="d-day">@entry.EntryDate.Day</span>
                        <span class="d-month">@entry.EntryDate.ToString("MMM")</span>
                    </div>
                    <div class="entry-details">
                        <div class="entry-title">@(string.IsNullOrEmpty(entry.Title) ? "Untitled Entry" : entry.Title)</div>
                        <div class="entry-snippet">@(StripHtml(entry.Content ?? "No content..."))</div>
                    </div>
                    <div class="entry-mood">@GetMoodEmoji(entry.PrimaryMood)</div>
                </div>
                }
                }
                else
                {
                <div class="empty-placeholder">
                    <i class="bi bi-journal-album"></i>
                    <p>No entries yet. Start writing today!</p>
                </div>
                }
            </div>
        </div>

        <!-- RIGHT: Mood Visualizer -->
        <div class="visualizer-column">
            <div class="mood-widget-card h-100">
                <div class="mood-header">
                    <h3>Emotional Footprint</h3>
                    <span class="badge bg-light text-dark">Last 7 Entries</span>
                </div>

                <div class="mood-dots-container mt-4">
                    @if(recentEntries.Any())
                    {
                    @foreach(var entry in recentEntries.Take(7))
                    {
                    <div class="mood-dot-wrapper">
                        <div class="mood-dot @GetMoodClass(entry.PrimaryMood)"></div>
                        <span class="mood-dot-date">@entry.EntryDate.ToString("MMM dd")</span>
                    </div>
                    }
                    }
                    else
                    {
                    <div class="text-muted small">No data yet.</div>
                    }
                </div>
            </div>

            <!-- Tip Card -->
            <div class="tip-card mt-4">
                <i class="bi bi-stars fs-4"></i>
                <div>
                    <strong>Daily Tip:</strong>
                    <p class="m-0 small opacity-75">Writing just 5 minutes a day can reduce stress by 30%.</p>
                </div>
            </div>
        </div>
    </div>

</div>

@code {
private int currentStreak = 0;
private int totalWords = 0;
private int entryCount = 0;
private List<JournalEntry> recentEntries = new List<JournalEntry>();
private string dailyPrompt = "What's on your mind?";

protected override async Task OnInitializedAsync()
{
currentStreak = await DbService.GetCurrentStreakAsync();
totalWords = await DbService.GetTotalWordsAsync();
var all = await DbService.GetAllEntriesAsync();

entryCount = all.Count;
recentEntries = all;

var todayEntry = await DbService.GetEntryByDateAsync(DateTime.Now);
if (todayEntry != null && !string.IsNullOrEmpty(todayEntry.Content))
{
dailyPrompt = "Keep the momentum going! Want to add more?";
}
else
{
dailyPrompt = GetRandomPrompt();
}
}

private string GetTimeOfDay()
{
var hour = DateTime.Now.Hour;
if (hour < 12) return "Morning";
if (hour < 18) return "Afternoon";
return "Evening";
}

private string GetRandomPrompt()
{
var prompts = new[]
{
"What made you smile today?",
"What is one thing you learned today?",
"How are you feeling right now?",
"What are you grateful for?",
"Who did you connect with today?"
};
return prompts[new Random().Next(prompts.Length)];
}

private string StripHtml(string input)
{
if (string.IsNullOrEmpty(input)) return "";
var noHtml = System.Text.RegularExpressions.Regex.Replace(input, "<.*?>", String.Empty);
return noHtml.Length > 80 ? noHtml.Substring(0, 80) + "..." : noHtml;
}

