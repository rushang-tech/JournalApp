        width: 100%;
        max-width: 1600px; /* Increased massively from 1100px */
        margin: 0 auto;
        padding: 50px 60px; /* More padding on sides */
        font-family: 'Poppins', sans-serif;
        color: #1A1A1A;
        height: 100%;
        display: flex;
        flex-direction: column;
        gap: 40px; /* Increased vertical gap */
    }

    /* Animation */
    .fade-in { animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards; opacity: 0; transform: translateY(20px); }
    @@keyframes fadeIn { to { opacity: 1; transform: translateY(0); } }

    /* --- 1. HEADER --- */
    .dashboard-header {
        display: flex; justify-content: space-between; align-items: flex-end;
    }

    .date-badge {
        font-size: 0.9rem; font-weight: 700; color: #888;
        text-transform: uppercase; letter-spacing: 1.5px; margin-bottom: 8px;
    }

    .greeting-title {
        font-size: 3.5rem; font-weight: 900; line-height: 1.1; margin: 0;
        letter-spacing: -2px;
    }
    .highlight-name { color: #512BD4; }

    .primary-btn {
        background: #1A1A1A; color: white; border: none;
        padding: 14px 28px; border-radius: 50px;
        font-weight: 700; font-size: 1rem; cursor: pointer;
        display: flex; align-items: center; gap: 10px;
        transition: transform 0.2s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        white-space: nowrap;
    }
    .primary-btn:hover { transform: translateY(-2px); }

    /* --- 2. HERO CARD (Daily Prompt) --- */
    .hero-card {
        background: #1A1A1A; /* Dark Theme */
        border-radius: 32px;
        padding: 60px;
        color: white;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        box-shadow: 0 20px 40px rgba(0,0,0,0.25);
        min-height: 250px; /* Force height */
        display: flex; align-items: center;
    }
    .hero-card:hover { transform: scale(1.01); }

    .hero-content { position: relative; z-index: 2; width: 100%; }
    .hero-label {
        font-size: 0.8rem; font-weight: 700; letter-spacing: 2px;
        color: rgba(255,255,255,0.6); display: block; margin-bottom: 20px;
    }
    .hero-text {
        font-size: 2.5rem; font-weight: 800; line-height: 1.2;
        margin-bottom: 40px; max-width: 80%;
    }

    .hero-footer {
        display: flex; align-items: center; gap: 12px; font-weight: 600; opacity: 0.9; font-size: 1.1rem;
    }
    .arrow-icon { font-size: 1.6rem; }

    .hero-blob {
        position: absolute; right: -50px; bottom: -50px;
        width: 400px; height: 400px;
        background: radial-gradient(circle, rgba(81, 43, 212, 0.5) 0%, rgba(0,0,0,0) 70%);
        border-radius: 50%; pointer-events: none;
    }

    /* --- 3. WIDGETS GRID (Spreads out) --- */
    .widgets-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* Equal thirds */
        gap: 30px;
    }

    .widget-card {
        background: white; border: 1px solid #F0F0F0;
        border-radius: 28px; padding: 30px;
        display: flex; align-items: center; gap: 25px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
        transition: transform 0.2s;
    }
    .widget-card:hover { transform: translateY(-5px); }

    .icon-circle {
        width: 65px; height: 65px; border-radius: 20px;
        display: flex; align-items: center; justify-content: center; font-size: 1.8rem;
        flex-shrink: 0;
    }
    .purple-bg { background: #F3F0FF; color: #8A6FE8; }
    .orange-bg { background: #FFF7ED; color: #EA580C; }
    .blue-bg { background: #EFF6FF; color: #3B82F6; }

    .widget-text { display: flex; flex-direction: column; }
    .widget-value { font-size: 2.2rem; font-weight: 900; line-height: 1; margin: 0; }
    .widget-label { font-size: 0.9rem; font-weight: 600; color: #999; text-transform: uppercase; margin-top: 4px; }

