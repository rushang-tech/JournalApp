    .entry-title { font-weight: 800; font-size: 1.2rem; margin-bottom: 4px; color: #111; }
    .entry-snippet { font-size: 1rem; color: #666; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
    .entry-mood { font-size: 1.6rem; }

    /* Right Column: Visualizer */
    .visualizer-column { display: flex; flex-direction: column; }

    .mood-widget-card {
        background: white; border: 1px solid #F0F0F0;
        border-radius: 28px; padding: 30px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
    }
    .mood-header { display: flex; justify-content: space-between; align-items: center; }
    .mood-header h3 { font-size: 1.2rem; font-weight: 800; margin: 0; }

    .mood-dots-container {
        display: flex; gap: 12px; flex-wrap: wrap;
    }
    .mood-dot-wrapper { display: flex; flex-direction: column; align-items: center; gap: 5px; }
    .mood-dot { width: 35px; height: 35px; border-radius: 50%; transition: transform 0.2s; }
    .mood-dot-date { font-size: 0.65rem; color: #BBB; font-weight: 600; text-transform: uppercase; }

    .dot-happy { background: #10B981; } /* Green */
    .dot-neutral { background: #9CA3AF; } /* Gray */
    .dot-sad { background: #EF4444; } /* Red */
    .empty { background: #F3F4F6; }

    .tip-card {
        background: linear-gradient(135deg, #F3F0FF 0%, #E0D4FC 100%);
        color: #512BD4;
        padding: 25px; border-radius: 24px;
        display: flex; gap: 15px; align-items: center;
    }

