    .hero-text { font-size: 2.2rem; font-weight: 700; line-height: 1.2; margin-bottom: 32px; color:white; }
    .hero-footer {
        display: flex; align-items: center; gap: 12px; font-weight: 500;
        opacity: 0.8; font-size: 1rem; color:white;
    }
    .hero-blob {
        position: absolute; right: -10%; bottom: -50%;
        width: 500px; height: 500px;
        background: radial-gradient(circle, rgba(81, 43, 212, 0.6) 0%, rgba(0,0,0,0) 70%);
